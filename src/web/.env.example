NEXT_PUBLIC_APP_NAME=HCBS Revenue Management System
NEXT_PUBLIC_APP_VERSION=1.0.0

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api
NEXT_PUBLIC_API_TIMEOUT=30000

# Environment
NEXT_PUBLIC_ENVIRONMENT=development
NEXT_PUBLIC_ENABLE_MOCK_API=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_FEATURE_FLAGS=true

# Localization
NEXT_PUBLIC_DEFAULT_LOCALE=en-US
NEXT_PUBLIC_SUPPORTED_LOCALES=en-US

# Security & Authentication
NEXT_PUBLIC_ENABLE_MFA=true
NEXT_PUBLIC_SESSION_TIMEOUT=15
NEXT_PUBLIC_MAX_CONCURRENT_SESSIONS=3
NEXT_PUBLIC_ENABLE_HIPAA_COMPLIANCE=true

# NextAuth.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secure-nextauth-secret-key

# OAuth Providers
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
AZURE_AD_CLIENT_ID=
AZURE_AD_CLIENT_SECRET=
AZURE_AD_TENANT_ID=

# Build Configuration
ANALYZE=false

# Content Security Policy
NEXT_PUBLIC_CSP_CONNECT_SRC='self' https://*.thinkcaring.com