# For more information, visit https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.{md,markdown}]
trim_trailing_whitespace = false

[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 100

[*.{css,scss}]
indent_size = 2

[*.{json,yaml,yml}]
indent_size = 2

[*.py]
indent_size = 4